<div class="roof">
  <div class="container">
      <div class="row">
        <div class="col-md-4">
          <div class="thumbnail">
            <%= image_tag @listing.image %>
          </div>
        </div>
        <div class="col-md-6"><br>
          <span class="label label-success">
            <%=  @listing.category.name %>
          </span><br ><br>
          <span class="label label-danger"><%= @listing.id %></span>
          <h3><%= @listing.name %></h3>
          <h4> <%= number_to_currency(@listing.price) %></h4>
          <label>Description:</label>
          <p  class= "well item-desc "><%= @listing.description%></p>
          <i class="fa fa-map-marker" aria-hidden="true" style="font-size: 1.5rem;"> <%= @listing.city %></i><br>
          <button type="button" name="button" class="btn btn-primary">Contact Seller</button>
          <button type="button" name="button" class="btn btn-primary">Add to cart</button>


          <% if (user_signed_in?) && (current_user == @user) %>
            <%= link_to "Edit", edit_listing_path(@listing) %>
            <%= link_to 'Back', listings_path %>
            <%= link_to "Delete", @listing, method: :delete, data: {confirm: "Are you sure?"} %>
          <% end %>
        </div>
        <!-- <div class="col-md-2">
          <div class="section-part">

          </div>
        </div> -->

      <div class="col-md-12">
        <br><br>
        <ul class="nav nav-tabs">
          <li role="presentation" class="active"><a href="#">Gallery</a></li>
          <li role="presentation"><a href="#">Review</a></li>
        </ul>
      </div>

    </div>
  <%= link_to 'Edit', edit_listing_path(@listing) %> |
  <%= link_to 'Back', listings_path %>
</div>
